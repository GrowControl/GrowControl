<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>final-zip</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/server/target/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>gcServer-*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/client/target/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>gcClient-*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/plugins/target/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>gcPlugins-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>changelog.txt</include>
				<include>readme.txt</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>

