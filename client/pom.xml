<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
<!-- http://maven-repository.com/ -->
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.growcontrol</groupId>
	<artifactId>gcClient</artifactId>
	<packaging>jar</packaging>
	<version>3.5.x</version>
	<name>GrowControl-Client</name>
	<url>http://growcontrol.com</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
<!--		<pxnCommon-version>[3.5,3.6)</pxnCommon-version> -->
		<com.miglayout-version>4.2</com.miglayout-version>
		<junit-version>4.8.2</junit-version>
	</properties>
	<scm>
		<url>https://github.com/PoiXson/GrowControl</url>
		<connection>scm:git:https://github.com/PoiXson/GrowControl.git</connection>
		<developerConnection>scm:git:https://github.com/PoiXson/GrowControl.git</developerConnection>
	</scm>
	<organization>
		<name>PoiXson</name>
		<url>http://poixson.com</url>
	</organization>
	<issueManagement>
		<url>https://github.com/PoiXson/GrowControl/issues</url>
		<system>github</system>
	</issueManagement>
	<ciManagement>
		<url>ci.poixson.com</url>
		<system>pxnci</system>
	</ciManagement>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<finalName>scant-${project.artifactId}-${project.version}</finalName>
		<resources>
			<resource>
				<directory>resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>images</directory>
				<targetPath>${project.build.outputDirectory}/images</targetPath>
				<filtering>false</filtering>
				<includes>
					<include>**/icon-loading-animated.gif</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<archive>
						<manifest>
							<mainClass>com.growcontrol.client.gcClient</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.2</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<finalName>${project.artifactId}-${project.version}</finalName>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<finalName>${project.artifactId}-${project.version}</finalName>
					<attach>false</attach>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.akathist.maven.plugins.launch4j</groupId>
				<artifactId>launch4j-maven-plugin</artifactId>
				<version>1.7.4</version>
				<executions>
					<execution>
						<id>l4j-clui</id>
						<phase>package</phase>
						<goals>
							<goal>launch4j</goal>
						</goals>
						<configuration>
							<headerType>console</headerType>
							<jar>${project.build.directory}/${project.artifactId}-${project.version}.jar</jar>
							<outfile>${project.build.directory}/GrowControl-${project.version}.exe</outfile>
							<downloadUrl>http://java.com/download</downloadUrl>
<!--
							<classPath>
								<mainClass>com.growcontrol.server.gcServer</mainClass>
								<preCp>anything</preCp>
							</classPath>
-->
							<icon>resources/treeicon.ico</icon>
							<jre>
								<minVersion>1.8.0</minVersion>
								<jdkPreference>preferJre</jdkPreference>
							</jre>
							<versionInfo>
								<fileVersion>3.5.0.0</fileVersion>
								<txtFileVersion>${project.version}</txtFileVersion>
								<fileDescription>${project.name}</fileDescription>
								<copyright>2015 GrowControl.com</copyright>
								<productVersion>1.0.0.0</productVersion>
								<txtProductVersion>1.0.0.0</txtProductVersion>
								<productName>${project.name}</productName>
								<companyName>GrowControl.com</companyName>
								<internalName>GrowControl</internalName>
								<originalFilename>GrowControl.exe</originalFilename>
							</versionInfo>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
<!--
		<dependency>
			<groupId>com.poixson</groupId>
			<artifactId>pxnCommon</artifactId>
			<version>${pxnCommon-version}</version>
			<scope>compile</scope>
		</dependency>
-->
		<dependency>
			<groupId>com.growcontrol</groupId>
			<artifactId>gcServer</artifactId>
			<version>${project.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.miglayout</groupId>
			<artifactId>miglayout-swing</artifactId>
			<version>${com.miglayout-version}</version>
			<scope>compile</scope>
		</dependency>
<!--
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit-version}</version>
			<scope>test</scope>
		</dependency>
-->
	</dependencies>
</project>
