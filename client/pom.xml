<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
<!-- http://maven-repository.com/ -->
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.growcontrol</groupId>
	<artifactId>gcClient</artifactId>
	<packaging>jar</packaging>
	<version>3.5.x</version>
	<name>GrowControl-Client</name>
	<url>http://growcontrol.com</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
<!--		<pxnCommon-version>[3.5,3.6)</pxnCommon-version> -->
		<com.miglayout-version>4.2</com.miglayout-version>
		<junit-version>4.8.2</junit-version>
	</properties>
	<scm>
		<url>https://github.com/PoiXson/GrowControl</url>
		<connection>scm:git:https://github.com/PoiXson/GrowControl.git</connection>
		<developerConnection>scm:git:https://github.com/PoiXson/GrowControl.git</developerConnection>
	</scm>
	<organization>
		<name>PoiXson</name>
		<url>http://poixson.com</url>
	</organization>
	<issueManagement>
		<url>https://github.com/PoiXson/GrowControl/issues</url>
		<system>github</system>
	</issueManagement>
	<ciManagement>
		<url>ci.poixson.com</url>
		<system>pxnci</system>
	</ciManagement>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<finalName>scant-${project.artifactId}-${project.version}</finalName>
		<resources>
			<resource>
				<directory>resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>images</directory>
				<targetPath>${project.build.outputDirectory}/images</targetPath>
				<filtering>false</filtering>
				<includes>
					<include>**/icon-loading-animated.gif</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<archive>
						<manifest>
							<mainClass>com.growcontrol.client.gcClient</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.2</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<finalName>${project.artifactId}-${project.version}</finalName>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
<!--
		<dependency>
			<groupId>com.poixson</groupId>
			<artifactId>pxnCommon</artifactId>
			<version>${pxnCommon-version}</version>
			<scope>compile</scope>
		</dependency>
-->
		<dependency>
			<groupId>com.growcontrol</groupId>
			<artifactId>gcServer</artifactId>
			<version>${project.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.miglayout</groupId>
			<artifactId>miglayout-swing</artifactId>
			<version>${com.miglayout-version}</version>
			<scope>compile</scope>
		</dependency>
<!--
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit-version}</version>
			<scope>test</scope>
		</dependency>
-->
	</dependencies>
</project>
